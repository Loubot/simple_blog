<h1>Listing posts</h1>
<% @posts.each do |post| %>
  <section class="displayPosts">
  
    <%= link_to "#{post.author.username}", post.author.username, class: 'indexUserLink' %><br>
    <p style="padding-left:1%;"><%= post.title %> </p> 
    <p style="padding-left:2%;"><%= post.body %></p>
  </section>
<% end %>

<table>
  <tr>
    <th>Created</th>
    <th>Title</th>
    <th>Author</th>
    <th>Status</th>
    <th>Categories</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% @posts.each do |post| %>
  <tr>
    <td><%= post.created_at.strftime('%a %b %y %H:%M') %></td>
    <td><%= post.title %></td>
    <td><%= post.author.username %></td>
    <td><%= post.status %></td>
    <td><%= post.categories.collect { |cat| cat.name }.join(',') %></td>
    <td><%= post.comments_count %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Blog post', new_post_path %>
