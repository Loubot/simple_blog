<%= provide(:title => 'Posts') %>


<div class='postsArea'>
  <h1>Listing posts</h1>

  <%= paginate @posts %>
  <%= render @posts %>
</div>

<div class="postsNavLinks">
  <% if user_signed_in? %>
    <%= button_to 'New Blog post', new_post_path, class: 'btn btn-warning', method: 'get' %>
  <% end %>
</div>

